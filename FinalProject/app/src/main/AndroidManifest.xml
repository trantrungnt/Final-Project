<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="techkids.mad3.finalproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CategoryActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddEasyActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".activity.SubstractEasyActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity android:name=".activity.DisplayScoreActivity"></activity>
        <activity
            android:name=".activity.AuthorActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".activity.PuzzleActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".activity.CompareActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
    </application>

</manifest>