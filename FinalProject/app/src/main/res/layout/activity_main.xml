<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_background"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btnBeginFirstScreen"
        android:textColor="@color/colorAccent"
        android:alpha="0.8"
        android:background="@drawable/button_style"
        android:layout_marginTop="@dimen/btnBeginFirstScreen_marginTop"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/btnBeginFirstScreen_width"
        android:layout_height="@dimen/btnBeginFirstScreen_height"
        android:text="@string/btnBeginFirstScreen_text" />
    <Button
        android:id="@+id/btnTest"
        android:layout_below="@id/btnBeginFirstScreen"
        android:layout_marginTop="@dimen/btnTest_marginTop"
        android:layout_centerHorizontal="true"
        android:text="@string/btnTest_text"
        android:textColor="@color/colorAccent"
        android:alpha="0.8"
        android:background="@drawable/button_style"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
    />

    <Button
        android:id="@+id/btnAuthor"
        android:layout_below="@id/btnTest"
        android:layout_marginTop="@dimen/btnTest_marginTop"
        android:layout_centerHorizontal="true"
        android:text="@string/btnAuthor_text"
        android:textColor="@color/colorAccent"
        android:alpha="0.8"
        android:background="@drawable/button_style"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        />

    <Button
        android:id="@+id/btnExit"
        android:layout_below="@id/btnAuthor"
        android:layout_marginTop="@dimen/btnExit_marginTop"
        android:layout_centerHorizontal="true"
        android:text="ThoÃ¡t"
        android:textColor="@color/colorAccent"
        android:alpha="0.8"
        android:background="@drawable/button_style"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        />
</RelativeLayout>
