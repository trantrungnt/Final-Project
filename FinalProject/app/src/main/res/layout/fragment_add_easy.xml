<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard"
    tools:context="techkids.mad3.finalproject.fragments.AddEasyFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <techkids.mad3.finalproject.drawing.CalculationCustomView
            android:id="@+id/calculationCustomView"
            android:layout_width="@dimen/add_calculation_width"
            android:layout_height="@dimen/add_calculation_height"
            android:layout_marginTop="@dimen/calculation_margin_top" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/white"
            android:textSize="@dimen/on_board_text_size" />
    </LinearLayout>
</RelativeLayout>
